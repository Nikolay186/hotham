{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "rust: cargo build"
		},
		{
			"type": "shell",
			"windows": {
				"command": ".\\test.ps1"
			},
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"label": "Run Cubeworld on Oculus Quest",
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "Run Renderdoc",
			"command": ".\\cubeworld.cap",
			"problemMatcher": []
		},
		{
			"type": "cargo",
			"command": "test",
			"args": [
				"-p",
				"hotham-asteroid"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "test",
			"env": {
				"RUST_BACKTRACE": "1"
			},
			"label": "rust: cargo test"
		},
		{
			"type": "cargo",
			"command": "bench",
			"args": [
				"-p",
				"hotham-asteroid"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "test",
			"label": "rust: cargo bench"
		}
	]
}